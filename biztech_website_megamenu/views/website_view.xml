<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="custom_menu_tree" model="ir.ui.view">
        <field name="name">website.menu.tree.add.ismegameu</field>
        <field name="model">website.menu</field>
        <field name="inherit_id" ref="website.menu_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="is_megamenu"/>
            </field>
            <xpath expr="//tree" position="attributes">
                <attribute name="editable"/>
            </xpath>
        </field>
    </record>
    <!-- Product Category -->
    <record id="website.website_menus_form_view" model="ir.ui.view">
        <field name="name">Website Menu Form View Inherited</field>
        <field name="model">website.menu</field>
        <field name="field_parent">child_id</field>
        <field name="arch" type="xml">
            <form string="Website menu">
                <sheet>
                    <group>
                        <field name="website_id" options="{'no_create': True}"/>
                        <field name="name"/>
                        <field name="url"/>
                        <field name="new_window"/>
                        <field name="parent_id"/>
                    </group>
                    <group attrs="{'invisible': ['|',('parent_id', '=', False),('is_megamenu', '=', True)]}">
                        <label for='is_mega_menu' string='Odoo Megamenu?'/>
                        <field name="is_mega_menu" nolabel="1"/>
                    </group>
                    <group attrs="{'invisible': ['|',('parent_id', '=', False),('is_mega_menu', '=', True)]}">
                        <label for='is_megamenu' string='Appjetty Megamenu?'/>
                        <field name="is_megamenu" nolabel="1"/>
                    </group>
                    
                    <notebook>
                        <page string="General Setting" attrs="{'invisible':['|', '|', ('is_megamenu', '=', False), ('parent_id', '=', False)]}">
                            <group attrs="{'invisible': ['|', ('is_megamenu', '=', False), ('parent_id', '=', False)]}">
                                <field attrs="{'required': [('is_megamenu', '=', True), ('parent_id', '!=', False)]}" name="megamenu_view_type"/>
                            </group>
                            <group attrs="{'invisible': ['|', '|', ('is_megamenu', '=', False), ('parent_id', '=', False), ('megamenu_view_type', '=', False)]}" string="Configuration">
                                <field attrs="{'required': [('is_megamenu', '=', True), ('parent_id', '!=', False)]}" name="megamenu_type"/>
                                <field name="megamenu_bg"/>
                                <field attrs="{'invisible': [('megamenu_bg', '=', False)]}" name="megamenu_bg_img_color" widget="radio"/>
                                <field attrs="{'invisible': ['|', ('megamenu_bg', '=', False), ('megamenu_bg_img_color', '=', 'bg_color')],                                     'required': [('megamenu_bg', '!=', False), ('megamenu_bg_img_color', '=', 'bg_img')]}" class="oe_avatar oe_left" name="megamenu_bg_image" widget="image"/>
                                <field attrs="{'invisible': ['|', ('megamenu_bg', '=', False), ('megamenu_bg_img_color', '=', 'bg_img')],                                     'required': [('megamenu_bg', '!=', False), ('megamenu_bg_img_color', '=', 'bg_color')]}" name="megamenu_bg_color" placeholder="#ccc"/>
                                <field name="menu_icon"/>
                                <field attrs="{'invisible': [('menu_icon', '=', False)],                                'required': [('menu_icon', '=', True)]}" class="oe_left oe_avatar" name="menu_icon_image" widget="image"/>
                                <field name="customize_menu_colors"/>
                                <field attrs="{'invisible': [('customize_menu_colors', '=', False)],                                        'required': [('customize_menu_colors', '=', True)]}" name="main_category_color"/>
                                <field attrs="{'invisible': [('customize_menu_colors', '=', False)],                                        'required': [('customize_menu_colors', '=', True)]}" name="sub_category_color"/>
                                <field name="display_menu_footer"/>
                                <field attrs="{'invisible': [('display_menu_footer', '=', False)],                                        'required': [('display_menu_footer', '=', True)]}" name="menu_footer" widget="html"/>
                                <field attrs="{'invisible': [('megamenu_view_type', 'not in', ['pages_megamenu'])] }" name="add_static_image"/>
                                <field attrs="{'invisible': [('megamenu_view_type', 'not in', ['cat_megamenu'])] }" name="special_feature"/>
                                <field attrs="{'invisible': [('special_feature', 'not in', ['category_slider']) ] }" name="carousel_header_name"/>
                                <field attrs="{'invisible': [('special_feature', 'not in', ['category_slider']) ] }" name="category_slider_position"/>
                                <field attrs="{'invisible': ['|', ('special_feature', 'not in', ['static_image']), ('add_static_image', '=', False) ] }" name="static_image_position" widget="radio"/>
                                <field attrs="{'invisible': ['|', ('special_feature', 'not in', ['static_image']), ('add_static_image', '=', False) ] }" class="oe_avatar oe_left" name="static_image" widget="image"/>
                                <field attrs="{'invisible': [('megamenu_view_type', 'not in', ['cat_megamenu'])] }" name="display_category_image"/>
                                <field attrs="{'invisible': [('display_category_image', '=', False)]}" name="category_image_position" widget="radio"/>
                            </group>
                        </page>
                        <page string="Category Configuration" attrs="{'invisible':['|', '|', ('is_megamenu', '=', False), ('parent_id', '=', False),('megamenu_view_type','not in',['cat_megamenu','list_cat_megamenu'])]}">
                          <group>
                            <field name="category_ids"/>
                          </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="website.action_website_menu" model="ir.actions.act_window">
        <field name="name">Website Menu</field>
        <field name="res_model">website.menu</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_my_websites':1}</field>
    </record>
</odoo>